{
    "auto_overwrite": true,
    "global_variables": {
        "$new_project_name": "firestarter",
        "$old_project_name": "betatester"
    },
    "dependency_configs": {
        "requirements": {
            "type": "requirements.txt",
            "output_file": "./requirements.txt"
        }
    },
    "resource_configs": [
        {
            "input_path": "../betatester/LICENSE",
            "output_path": "./LICENSE"
        },
        {
            "input_path": "../betatester/.vscode/",
            "output_path": "./.vscode/",
            "replace_configs": [
                {
                    "original_value": "betatester_web_service",
                    "new_value": "$new_project_name"
                },
                {
                    "original_value": "$old_project_name",
                    "new_value": "$new_project_name"
                }
            ],
            "auto_overwrite": false
        },
        {
            "input_path": "../betatester/.gitignore",
            "output_path": "./.gitignore",
            "auto_overwrite": false
        }
    ],
    "commands": [
        {"command": "uv venv", "not_run_check": "[[ -d .venv ]] && exit 1 || exit 0"},
        {"command": "uv pip install -e \".[cli, local, pythondep]\""}
    ]
}

